{
  "manifest_version": 3,
  "name": "Oh My Chat",
  "version": "1.0",
  "description": "An extension to include GPT batteries into your browser!",
  "permissions": ["activeTab", "tabs", "contextMenus", "storage"],
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "64": "assets/icons/icon-64.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "64": "assets/icons/icon-64.png",
      "128": "assets/icons/icon-128.png"
    },
    "default_popup": "views/popup.html"
  },
  "options_page": "views/settings.html",
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/?ohmychat=1",
        "https://chatgpt.com/?ohmychat=1"
      ],
      "js": ["chatGPTHandler.js"]
    },
    {
      "matches": ["https://claude.ai/chats?ohmychat=1"],
      "js": ["claudeHandler.js"]
    },
    {
      "matches": [
        "https://twitter.com/*",
        "https://twitter.com/**/*",
        "https://x.com/**/*",
        "https://x.com/**/*"
      ],
      "js": ["twitterHandler.js"]
    },
    {
      "matches": ["https://youtube.com/*", "https://www.youtube.com/*"],
      "js": ["youtubeHandler.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["webpageHandler.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
